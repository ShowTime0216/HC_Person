<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f0"
    android:orientation="vertical">

    <include layout="@layout/tab_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/order_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/blue_1b"
        app:tabPaddingEnd="1dp"
        app:tabPaddingStart="1dp"
        app:tabSelectedTextColor="@color/blue_1b"
        app:tabTextColor="@color/black_6b" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>