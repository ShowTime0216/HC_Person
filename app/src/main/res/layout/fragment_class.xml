<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f0"
    android:orientation="vertical">

    <include layout="@layout/layout_head_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_service_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_service_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_service_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预约服务" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_consumables_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_consumables_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_consumables_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="耗材更换" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_accessories_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_accessories_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_accessories_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配件更换" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_integral_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_integral_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_integral_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分商城" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_quick_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_quick_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_quick_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快捷报修" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />

                    <LinearLayout
                        android:id="@+id/class_left_send_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/class_left_send_img"
                            android:layout_width="32dp"
                            android:layout_height="35dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/item03" />

                        <TextView
                            android:id="@+id/class_left_send_text"
                            style="@style/class_left_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保内送修" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_d8" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_d8" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/class_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>