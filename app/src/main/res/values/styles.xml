<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="textSize10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="textSize12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textSize13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textSize14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textSize15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textSize16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textSize18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSize20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textSize22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textSize24">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- 主页面tab -->
    <style name="tab_main_style">
        <item name="android:textColor">@color/black_5d</item>
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <!-- 首页8个item -->
    <style name="home_btn_item">
        <item name="android:textColor">@color/black_5d</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="home_layout_item">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/selector_item</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 个人中心item -->
    <style name="mine_item">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:src">@mipmap/item04</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="user_title">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/black_34</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="user_text">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/black_97</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 分类左侧item -->
    <style name="class_left_item">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/black_6b</item>
        <item name="android:textSize">@dimen/textSize15</item>
    </style>

